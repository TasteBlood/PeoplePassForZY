<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="entity"
            type="com.cloudcreativity.peoplepass_zy.entity.FinishPassEntity" />
        <import type="android.text.TextUtils" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray_414141"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:drawablePadding="5dip"
            android:drawableEnd="@drawable/ic_navigate_next_gray_24dp"
            android:text="@{entity.reportPojo.title}"/>
        <View
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray_f1f1f1"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_place"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:text='@{TextUtils.isEmpty(entity.reportPojo.detailAddress)?@string/str_no_address:entity.reportPojo.detailAddress}'/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_marginTop="5dip"
            android:gravity="end"
            android:text="@{entity.reportPojo.formatTime()}"
            android:textColor="@color/gray_919191"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray_f1f1f1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:visibility="gone"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:drawableStart="@drawable/ic_mode_edit_gray_24dp"
                android:gravity="center"
                android:text="@string/str_edit"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_marginStart="10dip"
                android:drawableStart="@drawable/ic_delete_forever_gray_24dp"
                android:gravity="center"
                android:text="@string/str_delete"/>
        </LinearLayout>
    </LinearLayout>
</layout>